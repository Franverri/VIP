<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsActivity"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">
        <LinearLayout
            android:background="@drawable/fondo"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFamosoItems"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/lali"/>
            <TextView
                android:id="@+id/tvNombreFamoso"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Famoso"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:textSize="21sp"/>

            <Button
                android:id="@+id/btnFollow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedbutton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Seguir"
                android:onClick="followFamous"/>

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/remeraicon"/>
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="PRODUCTO 1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/remeraicon"/>
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="PRODUCTO 2"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>